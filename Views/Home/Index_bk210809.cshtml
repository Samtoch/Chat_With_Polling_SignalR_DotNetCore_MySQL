@{
    ViewData["Title"] = "Home Page";
}


<section class="text-center">
    <h3> DOTNET CORE CHAT WITH SignalR </h3>
</section>

<section class="card mb-3 p-4">
    <h5 class="card-title text-center">CHAT BOX </h5>
    <form method="POST" class="card-body">
        <div class="mb-3">
            <label for="msg" class="form-label">User</label>
            <input class="form-control" name="user" id="userInput" />

            <label for="msg" class="form-label">Message</label> 
            <input class="form-control" name="message" id="messageInput" />
        </div>
        <button type="submit" class="btn btn-primary" id="SendMessageBtn">Send</button>
    </form>
</section>

<section class="card">
    <h5 class="card-title text-center">Chat Messages </h5>

    <ul id="messagesList"></ul>

</section>

<script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/3.1.7/signalr.min.js"></script>
<script src="~/js/chat_msg.js"></script>
